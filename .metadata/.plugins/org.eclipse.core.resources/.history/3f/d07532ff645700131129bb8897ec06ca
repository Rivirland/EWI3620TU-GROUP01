package menu;

import javax.media.opengl.GL;
import javax.media.opengl.GLAutoDrawable;

public class MainMenu {
	
	private int screenWidth = 800, screenHeight = 600;
	
	public MainMenu(int screenWidth, int screenHeight){
		this.screenWidth = screenWidth;
		this.screenHeight = screenHeight;
	}
	
	public setSize (int screenWidth, int screenHeight){
		this.screenWidth = screenWidth;
		this.screenHeight = screenHeight;
	}
	
	public void displayMainMenu(GLAutoDrawable drawable, GL gl){
		Teken.textDraw(drawable, gl, "Z@idm@n The G@me", 300f/1920f*screenWidth, 830f/1080f*screenHeight, 200f/1080f*screenHeight, "Agency FB");
		Teken.textDraw(drawable, gl, "New Game", 750f/1920f*screenWidth, 680f/1080f*screenHeight, 80f/1080f*screenHeight,"Agency FB");
		Teken.textDraw(drawable, gl, "Level Editor", 750f/1920f*screenWidth, 530f/1080f*screenHeight, 80f/1080f*screenHeight, "Agency FB");
		Teken.textDraw(drawable, gl, "Settings", 750f/1920f*screenWidth, 380f/1080f*screenHeight, 80f/1080f*screenHeight, "Agency FB");
		Teken.textDraw(drawable, gl, "Quit Game", 750f/1920f*screenWidth, 230f/1080f*screenHeight, 80f/1080f*screenHeight, "Agency FB");
	}

}
