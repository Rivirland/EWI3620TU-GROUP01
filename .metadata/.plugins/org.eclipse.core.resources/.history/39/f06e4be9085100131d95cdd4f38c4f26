package enemy;

import javax.media.opengl.GL;

import com.sun.opengl.util.GLUT;

import new_default.*;

public class Enemy extends GameObject implements VisibleObject{
	private EnemyControl enemyControl = null;
	
	public Enemy(double x, double y, double z) {
		// TODO Auto-generated constructor stub
	}
	public void setControl(EnemyControl enemyControl){
		this.enemyControl=enemyControl;
	}
	@Override
	public void display(GL gl) {
		
		GLUT glut = new GLUT();
		gl.glColor4d(1.0,1.0,0.0,1.0);
		gl.glPushMatrix();
		
		gl.glTranslated(0.0,5.0,0.0);
		glut.glutSolidSphere(5,30,30);
		
		gl.glPopMatrix();
		gl.glFlush();			      // Flush drawing routines
		  
		  		
	}

}
