package PickupItems;

import javax.media.opengl.GL;

import com.sun.opengl.util.GLUT;

import engine.*;

public class Trap extends Item {

	public Trap(double x, double y, double z, Maze maze) {
		super(x, y, z, maze);
	}

	@Override
	public void display(GL gl) {

		GLUT glut = new GLUT();
		gl.glPushMatrix();
		gl.glTranslated(super.locationX, super.locationY, super.locationZ);
		glut.glutSolidCube(2);
		gl.glPopMatrix();
	}

	@Override
	public double getX() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public double getY() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public double getZ() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public boolean collides(Player player) {
//		int mazeID = MazeRunner.level.getCurrentMaze(this);
		double diffX = player.getLocationX() - (this.locationX);
		double diffY = player.getLocationY() - (this.locationY);
		double diffZ = player.getLocationZ() - (this.locationZ);
		if (Math.sqrt(diffX * diffX + diffY * diffY + diffZ * diffZ) < 2) {
			return true;
		}
		return false;
	}

}
