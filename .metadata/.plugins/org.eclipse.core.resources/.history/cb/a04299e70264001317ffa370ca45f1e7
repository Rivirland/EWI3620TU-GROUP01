package engine;

import javax.media.opengl.GL;
import javax.media.opengl.glu.GLU;

import menu.Teken;

private static int screenWidth;
private static int screenWidth;

public class Reticle {
	public static void reticle(GL gl) {
			GLU glu = new GLU();
			gl.glMatrixMode(GL.GL_PROJECTION);
			gl.glPushMatrix();
			gl.glLoadIdentity();

			glu.gluOrtho2D(0, MazeRunner.screenWidth, 0, MazeRunner.screenHeight);
			gl.glMatrixMode(GL.GL_MODELVIEW);
			gl.glDisable(GL.GL_LIGHTING);
			gl.glDisable(GL.GL_TEXTURE_2D);
			// gl.glDisable(GL.GL_DEPTH_TEST);
			
			drawReticle();
			
			gl.glMatrixMode(GL.GL_PROJECTION);
			gl.glLoadIdentity();
			glu.gluPerspective(60,
					MazeRunner.screenWidth / MazeRunner.screenHeight, .1, 200);
			gl.glMatrixMode(GL.GL_MODELVIEW);
			gl.glEnable(GL.GL_LIGHTING);
			gl.glEnable(GL.GL_TEXTURE_2D);
			// gl.glEnable(GL.GL_DEPTH_TEST);

			// gl.glLoadIdentity();
			gl.glPopMatrix();
		}
	

private static void drawReticle(){
	
	Teken.rechthoek(gl, Mazerunner.screenWidth/2-1, screenHeight/2-1, screenWidth/2-1, screenHeight/2+1);
	
	
}
}